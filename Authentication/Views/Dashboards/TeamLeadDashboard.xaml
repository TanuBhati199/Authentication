      </Grid.ColumnDefinitions>

      <!-- App Title -->
      <TextBlock
        Text="Team Lead Dashboard"
        VerticalAlignment="Center"
        Margin="15,0,0,0"
        FontSize="20"
        FontWeight="Bold"
        Foreground="#2D2D2D"
      />

