<Window
  x:Class="CaseManagementSystem.Views.Authentication.SignupView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
  xmlns:vm="clr-namespace:CaseManagementSystem.ViewModels"
  xmlns:helpers="clr-namespace:CaseManagementSystem.Helpers"
  xmlns:local="clr-namespace:CaseManagementSystem.Views.Authentication"
  Title="Signup"
  Height="650"
  Width="1100"
  WindowStyle="None"
  AllowsTransparency="True"
  Background="Transparent"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen"
>
  <Window.DataContext>
    <vm:SignupViewModel />
  </Window.DataContext>

  <Window.Resources>
    <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <!-- Label Style -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="13" />
      <Setter Property="FontWeight" Value="Medium" />
      <Setter Property="Foreground" Value="#424242" />
      <Setter Property="Margin" Value="0,12,0,6" />
    </Style>

    <!-- Input Box Style -->
    <Style x:Key="InputBoxStyle" TargetType="telerik:RadWatermarkTextBox">
      <Setter Property="Height" Value="42" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Padding" Value="12,0" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="BorderBrush" Value="#D0D0D0" />
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="ComboStyle" TargetType="telerik:RadComboBox">
      <Setter Property="Height" Value="42" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Padding" Value="12,0" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="IsEditable" Value="False" />
    </Style>

    <!-- Standard ComboBox Style -->
    <Style x:Key="StandardComboStyle" TargetType="ComboBox">
      <Setter Property="Height" Value="42" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Padding" Value="12,8" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="BorderBrush" Value="#D0D0D0" />
    </Style>

    <!-- Password Box Style -->
    <Style x:Key="PasswordBoxStyle" TargetType="telerik:RadPasswordBox">
      <Setter Property="Height" Value="42" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Padding" Value="12,0" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Date Picker Style -->
    <Style x:Key="DatePickerStyle" TargetType="telerik:RadDatePicker">
      <Setter Property="Height" Value="42" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Padding" Value="12,0" />
    </Style>

    <!-- Register Button Style -->
    <Style x:Key="RegisterButtonStyle" TargetType="telerik:RadButton">
      <Setter Property="Height" Value="46" />
      <Setter Property="FontSize" Value="15" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Background" Value="#1976D2" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Image Button Style -->
    <Style x:Key="ImageButtonStyle" TargetType="Button">
      <Setter Property="Height" Value="40" />
      <Setter Property="FontSize" Value="13" />
      <Setter Property="Background" Value="#F5F5F5" />
      <Setter Property="Foreground" Value="#424242" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="BorderBrush" Value="#D0D0D0" />
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="6"
            >
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#EEEEEE" />
        </Trigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>

  <Border Background="#F5F5F5" CornerRadius="16">
    <Border.Effect>
      <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#000000" />
    </Border.Effect>

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <!-- Custom Title Bar -->
      <Border
        Grid.Row="0"
        Background="#0078D7"
        CornerRadius="16,16,0,0"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
      >
        <Grid>
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0,0,0">
            <Viewbox Width="24" Height="24" Margin="0,0,10,0">
              <Canvas Width="24" Height="24">
                <Path
                  Data="M12,2L2,7V17.5C2,19.43 3.57,21 5.5,21C7.43,21 9,19.43 9,17.5V11H15V17.5C15,19.43 16.57,21 18.5,21C20.43,21 22,19.43 22,17.5V7L12,2Z"
                  Fill="White"
                />
              </Canvas>
            </Viewbox>
            <TextBlock
              Text="Case Management System"
              FontSize="15"
              FontWeight="SemiBold"
              Foreground="White"
              VerticalAlignment="Center"
            />
          </StackPanel>

          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
            <!--<Button
              Content="—"
              Width="40"
              Height="40"
              Background="Transparent"
              BorderThickness="0"
              Foreground="#757575"
              FontSize="16"
              Cursor="Hand"
              Click="MinimizeButton_Click"
            >
              <Button.Style>
                <Style TargetType="Button">
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                          <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,-8,0,0"
                          />
                        </Border>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                  <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter Property="Background" Value="#F5F5F5" />
                    </Trigger>
                  </Style.Triggers>
                </Style>
              </Button.Style>
            </Button>-->

            <Button
              Content="✕"
              Width="40"
              Height="40"
              Background="Transparent"
              BorderThickness="0"
              Foreground="White"
              FontSize="16"
              Cursor="Hand"
              Click="CloseButton_Click"
            >
              <Button.Style>
                <Style TargetType="Button">
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                          <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                          />
                        </Border>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                  <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter Property="Background" Value="#FFEBEE" />
                      <Setter Property="Foreground" Value="#C62828" />
                    </Trigger>
                  </Style.Triggers>
                </Style>
              </Button.Style>
            </Button>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Main Content -->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="2*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Signup Form -->
        <Border Grid.Column="0" Background="White" CornerRadius="0,0,0,16">
          <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0">
            <StackPanel MaxWidth="680">
              <!-- Header -->
              <TextBlock
                Text="Create Your Account"
                FontSize="32"
                FontWeight="Bold"
                Foreground="#212121"
                Margin="0,10,0,5"
              />
              <TextBlock
                Text="Join our case management system today"
                FontSize="14"
                Foreground="#757575"
                Margin="0,0,0,25"
              />

              <!-- Two Column Form -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="20" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                  <TextBlock Text="User Name *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter your full name"
                    Text="{Binding UserName}"
                    Style="{StaticResource InputBoxStyle}"
                  />
                  <TextBlock Text="Mobile *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter mobile number"
                    Text="{Binding Mobile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource InputBoxStyle}"
                  />
                  <TextBlock
                    Text="{Binding MobileError}"
                    Foreground="Red"
                    FontSize="12"
                    Margin="4,2,0,0"
                    Visibility="{Binding MobileError, Converter={StaticResource StringToVisibilityConverter}}"
                  />

                  <TextBlock Text="User Works Under *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadComboBox
                    ItemsSource="{Binding WorkUnderList}"
                    SelectedItem="{Binding SelectedWorkUnder, Mode=TwoWay}"
                    Style="{StaticResource ComboStyle}"
                  />

                  <TextBlock Text="Designation" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter your designation"
                    Text="{Binding Designation}"
                    Style="{StaticResource InputBoxStyle}"
                  />

                  <TextBlock Text="Date Of Joining *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadDatePicker
                    SelectedDate="{Binding DateOfJoining, Mode=TwoWay}"
                    Style="{StaticResource DatePickerStyle}"
                  />

                  <TextBlock Text="Password *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadPasswordBox
                    helpers:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource PasswordBoxStyle}"
                  />
                  <TextBlock
                    Text="{Binding PasswordError}"
                    Foreground="Red"
                    FontSize="12"
                    Margin="4,2,0,0"
                    Visibility="{Binding PasswordError, Converter={StaticResource StringToVisibilityConverter}}"
                  />
                  <TextBlock Text="Security Question *" Style="{StaticResource LabelStyle}" />
                  <ComboBox
                    ItemsSource="{Binding SecurityQuestions}"
                    SelectedItem="{Binding SelectedSecurityQuestion, Mode=TwoWay}"
                    Style="{StaticResource StandardComboStyle}"
                  />

                  <TextBlock Text="Security Answer *" Style="{StaticResource LabelStyle}" />
                  <TextBox
                    Text="{Binding SecurityAnswer}"
                    Height="42"
                    FontSize="14"
                    Padding="12,0"
                    BorderBrush="#D0D0D0"
                  />
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                  <TextBlock Text="Email *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter email address"
                    Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource InputBoxStyle}"
                  />
                  <TextBlock
                    Text="{Binding EmailError}"
                    Foreground="Red"
                    FontSize="12"
                    Margin="4,2,0,0"
                    Visibility="{Binding EmailError, Converter={StaticResource StringToVisibilityConverter}}"
                  />
                  <TextBlock Text="User Type *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadComboBox
                    ItemsSource="{Binding UserTypes}"
                    SelectedItem="{Binding SelectedUserType, Mode=TwoWay}"
                    Style="{StaticResource ComboStyle}"
                  />

                  <TextBlock Text="Department" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter department"
                    Text="{Binding Department}"
                    Style="{StaticResource InputBoxStyle}"
                  />

                  <TextBlock Text="Gender *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadComboBox
                    ItemsSource="{Binding Genders}"
                    SelectedItem="{Binding SelectedGender, Mode=TwoWay}"
                    Style="{StaticResource ComboStyle}"
                  />

                  <TextBlock Text="Address *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadWatermarkTextBox
                    WatermarkContent="Enter full address"
                    Text="{Binding Address}"
                    AcceptsReturn="True"
                    Height="90"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    FontSize="14"
                    Padding="12,10"
                  />

                  <TextBlock Text="Confirm Password *" Style="{StaticResource LabelStyle}" />
                  <telerik:RadPasswordBox
                    helpers:PasswordHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource PasswordBoxStyle}"
                  />
                  <TextBlock
                    Text="{Binding ConfirmPasswordError}"
                    Foreground="Red"
                    FontSize="12"
                    Margin="4,2,0,0"
                    Visibility="{Binding ConfirmPasswordError, Converter={StaticResource StringToVisibilityConverter}}"
                  />

                  <TextBlock Text="Profile Image" Style="{StaticResource LabelStyle}" />
                  <Button
                    Content="📷 Choose Image"
                    Width="160"
                    HorizontalAlignment="Left"
                    Command="{Binding ChooseImageCommand}"
                    Style="{StaticResource ImageButtonStyle}"
                  />
                  <Border
                    Height="80"
                    Width="80"
                    BorderBrush="#D0D0D0"
                    BorderThickness="2"
                    CornerRadius="8"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Left"
                  >
                    <Image Source="{Binding UserImage}" Stretch="UniformToFill" />
                  </Border>
                </StackPanel>
              </Grid>

              <!-- Register Button -->
              <telerik:RadButton
                Content="Create Account"
                Command="{Binding RegisterCommand}"
                HorizontalAlignment="Stretch"
                Style="{StaticResource RegisterButtonStyle}"
                Margin="0,30,0,20"
                IsEnabled="{Binding IsFormValid}"
              />
              <!-- Footer -->
              <TextBlock HorizontalAlignment="Center" Margin="0,10,0,20">
                <Run Text="Already have an account?" Foreground="#757575" FontSize="13" />
                <Hyperlink
                  TextDecorations="None"
                  Foreground="#1976D2"
                  FontWeight="SemiBold"
                  Click="SignInHyperlink_Click"
                  Cursor="Hand"
                >
                  <Run Text=" Sign In" />
                </Hyperlink>
              </TextBlock>
            </StackPanel>
          </ScrollViewer>
        </Border>

        <!-- Right Panel - Branding -->
        <Border Grid.Column="1" CornerRadius="0,0,16,0">
          <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
              <GradientStop Color="#1976D2" Offset="0" />
              <GradientStop Color="#0078D7" Offset="0.5" />
              <GradientStop Color="#0288D1" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>

          <Grid>
            <!-- Pattern Overlay -->
            <Rectangle Fill="White" Opacity="0.03">
              <Rectangle.OpacityMask>
                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                  <DrawingBrush.Drawing>
                    <GeometryDrawing Brush="White">
                      <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10" />
                      </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                  </DrawingBrush.Drawing>
                </DrawingBrush>
              </Rectangle.OpacityMask>
            </Rectangle>

            <StackPanel VerticalAlignment="Center" Margin="40">
              <!-- Icon -->
              <Viewbox Width="120" Height="120" Margin="0,0,0,30">
                <Canvas Width="100" Height="100">
                  <Ellipse Width="100" Height="100" Fill="White" Opacity="0.2" />
                  <Path
                    Data="M30,45 L50,25 L70,45 M50,25 L50,75"
                    Stroke="White"
                    StrokeThickness="6"
                    StrokeStartLineCap="Round"
                    StrokeEndLineCap="Round"
                    StrokeLineJoin="Round"
                  />
                  <Ellipse Width="16" Height="16" Canvas.Left="42" Canvas.Top="17" Fill="White" />
                </Canvas>
              </Viewbox>

              <TextBlock
                Text="Join Our Platform"
                FontSize="28"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                Margin="0,0,0,10"
              />

              <TextBlock
                Text="Start managing your cases efficiently with our comprehensive system"
                FontSize="14"
                Foreground="White"
                Opacity="0.9"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Margin="0,0,0,40"
              />

              <!-- Features List -->
              <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                  <TextBlock
                    Text="✓"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,15,0"
                  />
                  <TextBlock
                    Text="Secure Account Protection"
                    FontSize="14"
                    Foreground="White"
                    Opacity="0.95"
                    TextWrapping="Wrap"
                  />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                  <TextBlock
                    Text="✓"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,15,0"
                  />
                  <TextBlock
                    Text="Role-Based Access Control"
                    FontSize="14"
                    Foreground="White"
                    Opacity="0.95"
                    TextWrapping="Wrap"
                  />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                  <TextBlock
                    Text="✓"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,15,0"
                  />
                  <TextBlock
                    Text="Collaborative Workspace"
                    FontSize="14"
                    Foreground="White"
                    Opacity="0.95"
                    TextWrapping="Wrap"
                  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                  <TextBlock
                    Text="✓"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Margin="0,0,15,0"
                  />
                  <TextBlock
                    Text="24/7 System Availability"
                    FontSize="14"
                    Foreground="White"
                    Opacity="0.95"
                    TextWrapping="Wrap"
                  />
                </StackPanel>
              </StackPanel>
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
    </Grid>
  </Border>
</Window>
